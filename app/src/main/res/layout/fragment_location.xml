<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.LocationFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_location_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="انتخاب موقعیت"
        app:titleTextColor="@color/app_titles_color"
        android:background="@color/colorPrimary"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <Button
        android:id="@+id/btn_submit_location_frag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:fontFamily="@font/shabnam_bold"
        android:textSize="@dimen/button_text_size"
        android:text="@string/btn_submit_text_location_frag"
        android:textColor="@color/colorAccent"
        android:layout_margin="@dimen/standard_margin"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>